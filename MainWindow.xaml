<Window x:Class="FileConver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

    <!-- 🌟 根 Grid 作为主布局 -->
    <Grid>
        <!-- 定义两列 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- 左侧固定宽度 200px 作为侧边栏 -->
            <ColumnDefinition Width="*"/>
            <!-- 右侧内容区，宽度自适应窗口变化 -->
        </Grid.ColumnDefinitions>

        <!-- 🌟 侧边栏 -->
        <StackPanel Grid.Column="0" Background="#80000000" VerticalAlignment="Stretch">
            <Label Content="导航栏" Foreground="White" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,20"/>
            <Button Content="首页" Background="White" Foreground="Black" Margin="5"/>
            <Button Content="历史记录" Background="White" Foreground="Black" Margin="5"/>
            <Button Content="设置" Background="White" Foreground="Black" Margin="5"/>
        </StackPanel>

        <!-- 🌟 右侧主界面 -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- 右侧界面占满全部空间 -->
            </Grid.RowDefinitions>

            <!-- ✅ 页面容器（用于切换页面） -->
            <StackPanel x:Name="PageContainer" Grid.Row="0" Visibility="Visible">
                <!-- ✅ 生成 .c 文件 复选框 -->
                <CheckBox Content="生成.c文件" Foreground="Black" Margin="5"/>

                <!-- ✅ 按钮区域 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                    <Button Content="上传文件" Width="100" Height="30" Background="White" Foreground="Black" Margin="5"/>
                    <Button Content="开始转换" Width="100" Height="30" Background="White" Foreground="Black" Margin="5"/>
                </StackPanel>

                <TextBox Margin="5" VerticalScrollBarVisibility="Auto"
         AcceptsReturn="True" TextWrapping="Wrap"
         Height="Auto"/>
                <!-- 高度自动调整 -->

            </StackPanel>
        </Grid>
    </Grid>
</Window>
